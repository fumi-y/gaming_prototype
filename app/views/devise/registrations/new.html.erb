<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">New User Sign Up</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
        
          <div class="field">
            <%= f.label :password %>
            <% @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

        <% end %>

        <div class="field">
          <%= f.label :nickname, "NickName" %><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :profile, "Profile" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "SIGN UP!", class: :form__btn  %>
        </div>

        <div class="actions">
          <%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post, class: :form__btn%>
        </div>

      <% end %>
    </div>
  </div>
</div>